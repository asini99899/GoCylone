<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoCeylon</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoCeylon.styles.css" asp-append-version="true" />
    <script src="~/js/translator.js"></script>
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light go-ceylon-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand go-ceylon-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🌴 GoCeylon
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"
                                data-translate="home">Home</a>
                        </li>
                        @{
                            var userRole = Context.Session.GetString("Role");
                            if (userRole == "admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin Dashboard
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" href="/admin/buses">Manage Buses</a></li>
                                        <li><a class="dropdown-item" href="/admin/routes">Manage Routes</a></li>
                                        <li><a class="dropdown-item" href="/admin/schedules">Manage Schedules</a></li>
                                        <li><a class="dropdown-item" href="/admin/fares">Manage Fares</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item" href="/admin/users">Manage Users</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"
                                        data-translate="privacy">Privacy</a>
                                </li>
                            }
                        }
                    </ul>
                    <!-- Language Selector -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                🌐 Language
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                <li><a class="dropdown-item" href="#" onclick="changeLanguage('en'); return false;">🇬🇧
                                        English</a></li>
                                <li><a class="dropdown-item" href="#" onclick="changeLanguage('si'); return false;">🇱🇰
                                        සිංහල (Sinhala)</a></li>
                                <li><a class="dropdown-item" href="#" onclick="changeLanguage('ta'); return false;">🇮🇳
                                        தமிழ் (Tamil)</a></li>
                            </ul>
                        </li>
                        @{
                            var userId = Context.Session.GetString("UserId");
                            if (!string.IsNullOrEmpty(userId))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Logout">🚪 Logout</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="flex: 1; display: flex; flex-direction: column;">
        <main role="main" class="pb-3" style="flex: 1;">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted go-ceylon-footer user-footer">
        <div class="container">
            &copy; 2025 - GoCeylon | "One nation. One route. One app." | Proudly Sri Lankan. Combines heritage with
            modern mobility.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>