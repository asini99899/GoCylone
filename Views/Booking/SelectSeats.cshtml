@model SelectSeatsViewModel

@{
    ViewData["Title"] = "Select Seats";
}

<style>
    .booking-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 30px 0;
    }

    .booking-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        padding: 30px;
        margin-bottom: 30px;
    }

    .booking-title {
        color: #667eea;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .route-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
    }

    .route-item {
        display: flex;
        flex-direction: column;
    }

    .route-label {
        font-size: 12px;
        opacity: 0.9;
        text-transform: uppercase;
    }

    .route-value {
        font-size: 16px;
        font-weight: bold;
    }

    .seats-section {
        margin-bottom: 40px;
    }

    .seats-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .bus-layout {
        display: inline-block;
        background: #f5f5f5;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .seats-grid {
        display: grid;
        gap: 15px;
        margin-bottom: 20px;
    }

    .seat-row {
        display: flex;
        justify-content: center;
        gap: 30px;
        align-items: center;
    }

    .seat-row-label {
        width: 30px;
        font-weight: bold;
        text-align: right;
        color: #666;
        margin-right: 10px;
    }

    .seat-pair {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .aisle {
        width: 40px;
        text-align: center;
    }

    .seat {
        width: 50px;
        height: 50px;
        border: 2px solid #ddd;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: white;
        font-weight: bold;
        transition: all 0.3s;
        font-size: 12px;
        outline: none;
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
    }

    .seat:focus {
        outline: none;
        box-shadow: none;
    }

    .seat:hover:not(.booked):not(.driver):not(.window) {
        border-color: #667eea;
        transform: scale(1.05);
    }

    .seat.available {
        background: #e8f5e9;
        border-color: #4caf50;
        color: #4caf50;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .seat.available:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
        border-color: #388e3c;
    }

    .seat.available.selected {
        background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
        color: white;
        border-color: #2e7d32;
        box-shadow: 0 6px 16px rgba(76, 175, 80, 0.4);
        transform: scale(1.08);
        font-weight: bold;
        animation: seatSelected 0.4s ease-out;
    }

    .seat.booked {
        background: #ffebee;
        border-color: #f44336;
        color: #f44336;
        cursor: not-allowed;
        opacity: 0.6;
    }

    .seat.processing {
        background: #fff176;
        border-color: #f9a825;
        color: #f57f17;
        cursor: not-allowed;
        opacity: 0.7;
        animation: pulse 1.5s infinite;
    }

    @@keyframes pulse {

        0%,
        100% {
            opacity: 0.7;
        }

        50% {
            opacity: 0.9;
        }
    }

    @@keyframes seatSelected {
        0% {
            transform: scale(0.9);
            opacity: 0.7;
        }

        50% {
            transform: scale(1.15);
        }

        100% {
            transform: scale(1.08);
            opacity: 1;
        }
    }

    .seat.driver {
        background: #fff3e0;
        border-color: #ff9800;
        cursor: not-allowed;
        opacity: 0.6;
    }

    .legend {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
        margin-top: 20px;
        padding: 20px;
        background: #f5f5f5;
        border-radius: 10px;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .legend-seat {
        width: 30px;
        height: 30px;
        border: 2px solid;
        border-radius: 3px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
    }

    .legend-text {
        font-size: 14px;
        color: #333;
    }

    .boarding-section {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        margin-top: 30px;
    }

    .boarding-title {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .boarding-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .boarding-item {
        display: flex;
        flex-direction: column;
    }

    .boarding-label {
        font-size: 12px;
        color: #666;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .boarding-select {
        padding: 12px;
        border: 2px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        background: white;
        cursor: pointer;
    }

    .boarding-select:focus {
        border-color: #667eea;
        outline: none;
    }

    .buttons-section {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 30px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        font-size: 16px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        flex: 1;
        font-size: 18px;
        padding: 16px 30px;
    }

    .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-primary:disabled {
        background: #ccc;
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    .btn-primary:active:not(:disabled) {
        transform: translateY(0px);
    }

    .btn-secondary {
        background: #f5f5f5;
        color: #333;
        border: 2px solid #ddd;
    }

    .btn-secondary:hover {
        background: #e0e0e0;
    }

    .selected-seats {
        background: #e8f5e9;
        padding: 15px;
        border-radius: 5px;
        margin-top: 20px;
        display: none;
    }

    .selected-seats.show {
        display: block;
    }

    .selected-seats-title {
        font-weight: bold;
        color: #4caf50;
        margin-bottom: 10px;
    }

    .selected-seats-list {
        color: #333;
        font-weight: 600;
    }

    .price-info {
        background: #fff3e0;
        padding: 15px;
        border-radius: 5px;
        margin-top: 15px;
        border-left: 4px solid #ff9800;
        display: none;
    }

    .price-info.show {
        display: block;
    }

    .price-text {
        font-size: 16px;
        color: #f57c00;
        font-weight: bold;
    }

    .error-msg {
        background: #ffebee;
        border: 1px solid #f5c6cb;
        color: #c62828;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        display: none;
    }

    .error-msg.show {
        display: block;
    }
</style>

