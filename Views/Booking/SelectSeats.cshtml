<script>
    const scheduleId = @Model.ScheduleId;
    const seatStructure = '@Model.SeatStructure'; // "2*2" or "2*3"
    const totalSeats = @Model.TotalSeats;
    const bookedSeats = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BookedSeats));
    const processingSeats = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ProcessingSeats));

    let selectedSeats = [];
    let holdExpiryTime = null;
    let countdownInterval = null;
    const PRICE_PER_SEAT = 100; // Default price

    // Generate seat layout based on structure (2*2, 2*3, etc)
    function generateSeats() {
        const seatsGrid = document.getElementById('seatsGrid');
        seatsGrid.innerHTML = '';

        const [seatsPerRow, numRows] = seatStructure.split('*').map(Number);

        // Calculate actual number of rows needed based on totalSeats
        // For 40 seats with 2 seats per side: 40 / (2 per side * 2 sides) = 10 rows
        const seatsPerSide = seatsPerRow;
        const seatsPerRowTotal = seatsPerSide * 2; // left side + right side
        const calculatedRows = Math.ceil(totalSeats / seatsPerRowTotal);
        const rowsToDisplay = Math.max(calculatedRows, numRows); // Use calculated or specified, whichever is larger

        let seatNumber = 1;

        // For 2*2 structure: create 2 seats per side with aisle in middle
        // For 2*3 structure: create 3 seats per side with aisle in middle
        // For 40 seats: will create 10 rows (2*2 with 40 seats = 10 rows needed)

        // Create rows
        for (let row = 1; row <= rowsToDisplay; row++) {
            const rowDiv = document.createElement('div');
            rowDiv.className = 'seat-row';

            const rowLabel = document.createElement('div');
            rowLabel.className = 'seat-row-label';
            rowLabel.textContent = String.fromCharCode(64 + row); // A, B, C, D...
            rowDiv.appendChild(rowLabel);

            // LEFT SIDE seats
            const leftSide = document.createElement('div');
            leftSide.className = 'seat-pair';

            for (let i = 0; i < seatsPerSide; i++) {
                if (seatNumber > totalSeats) break;

                const seatDiv = document.createElement('div');
                seatDiv.dataset.seatNumber = seatNumber;
                seatDiv.id = `seat-${seatNumber}`;

                // Set seat status
                if (seatNumber === 1) {
                    seatDiv.className = 'seat driver';
                    seatDiv.textContent = 'D';
                    seatDiv.onclick = null;
                } else if (bookedSeats.includes(seatNumber)) {
                    seatDiv.className = 'seat booked';
                    seatDiv.textContent = 'X';
                    seatDiv.onclick = null;
                } else if (processingSeats.includes(seatNumber)) {
                    seatDiv.className = 'seat processing';
                    seatDiv.textContent = '‚è±';
                    seatDiv.onclick = null;
                    seatDiv.title = 'Being held by another user (20 min)';
                } else {
                    seatDiv.className = 'seat available';
                    seatDiv.textContent = seatNumber;
                    seatDiv.style.cursor = 'pointer';
                    seatDiv.style.userSelect = 'none';

                    // Single click handler
                    seatDiv.addEventListener('click', function (e) {
                        e.preventDefault();
                        toggleSeat(seatNumber);
                    });

                    // Double click handler (also toggles seat)
                    seatDiv.addEventListener('dblclick', function (e) {
                        e.preventDefault();
                        toggleSeat(seatNumber);
                    });

                    // Hover effect
                    seatDiv.addEventListener('mouseenter', function () {
                        if (!seatElement.classList.contains('selected')) {
                            this.style.transform = 'scale(1.1)';
                            this.style.boxShadow = '0 0 8px rgba(102, 126, 234, 0.5)';
                        }
                    });

                    seatDiv.addEventListener('mouseleave', function () {
                        this.style.transform = 'scale(1)';
                        this.style.boxShadow = 'none';
                    });
                }

                leftSide.appendChild(seatDiv);
                seatNumber++;
            }
            rowDiv.appendChild(leftSide);

            // AISLE (gap in middle)
            const aisle = document.createElement('div');
            aisle.className = 'aisle';
            aisle.innerHTML = '‚ïë';
            rowDiv.appendChild(aisle);

            // RIGHT SIDE seats
            const rightSide = document.createElement('div');
            rightSide.className = 'seat-pair';

            for (let i = 0; i < seatsPerSide; i++) {
                if (seatNumber > totalSeats) break;

                const seatDiv = document.createElement('div');
                seatDiv.dataset.seatNumber = seatNumber;
                seatDiv.id = `seat-${seatNumber}`;

                // Set seat status
                if (seatNumber === 1) {
                    seatDiv.className = 'seat driver';
                    seatDiv.textContent = 'D';
                    seatDiv.onclick = null;
                } else if (bookedSeats.includes(seatNumber)) {
                    seatDiv.className = 'seat booked';
                    seatDiv.textContent = 'X';
                    seatDiv.onclick = null;
                } else if (processingSeats.includes(seatNumber)) {
                    seatDiv.className = 'seat processing';
                    seatDiv.textContent = '‚è±';
                    seatDiv.onclick = null;
                    seatDiv.title = 'Being held by another user (20 min)';
                } else {
                    seatDiv.className = 'seat available';
                    seatDiv.textContent = seatNumber;
                    seatDiv.style.cursor = 'pointer';
                    seatDiv.style.userSelect = 'none';

                    // Single click handler
                    seatDiv.addEventListener('click', function (e) {
                        e.preventDefault();
                        toggleSeat(seatNumber);
                    });

                    // Double click handler (also toggles seat)
                    seatDiv.addEventListener('dblclick', function (e) {
                        e.preventDefault();
                        toggleSeat(seatNumber);
                    });

                    // Hover effect
                    seatDiv.addEventListener('mouseenter', function () {
                        if (!seatDiv.classList.contains('selected')) {
                            this.style.transform = 'scale(1.1)';
                            this.style.boxShadow = '0 0 8px rgba(102, 126, 234, 0.5)';
                        }
                    });

                    seatDiv.addEventListener('mouseleave', function () {
                        this.style.transform = 'scale(1)';
                        this.style.boxShadow = 'none';
                    });
                }

                rightSide.appendChild(seatDiv);
                seatNumber++;
            }
            rowDiv.appendChild(rightSide);

            seatsGrid.appendChild(rowDiv);
        }
    }

    // Toggle seat selection
    function toggleSeat(seatNumber) {
        const seatElement = document.getElementById(`seat-${seatNumber}`);

        if (seatElement.classList.contains('selected')) {
            seatElement.classList.remove('selected');
            seatElement.textContent = seatNumber;
            selectedSeats = selectedSeats.filter(s => s !== seatNumber);
        } else {
            seatElement.classList.add('selected');
            seatElement.textContent = '‚úì';
            selectedSeats.push(seatNumber);
        }

        console.log('Selected seats:', selectedSeats);
        updateUI();

        // Automatically hold selected seats if more than 0
        if (selectedSeats.length > 0 && !holdExpiryTime) {
            holdSeatsTemporarily();
        }
    }

    // Hold seats temporarily (20 min)
    function holdSeatsTemporarily() {
        fetch('/Booking/HoldSeats', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                scheduleId: scheduleId,
                selectedSeats: selectedSeats
            })
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    holdExpiryTime = new Date(data.expiryTime);
                    console.log('Seats held until:', holdExpiryTime);
                    startCountdown();
                } else {
                    showError(data.message);
                    // Deselect seats if hold failed
                    selectedSeats = [];
                    document.querySelectorAll('.seat.selected').forEach(s => s.classList.remove('selected'));
                    updateUI();
                }
            })
            .catch(err => {
                console.error('Error holding seats:', err);
                showError('Error holding seats. Please try again.');
            });
    }

    // Start countdown timer for hold expiry
    function startCountdown() {
        if (countdownInterval) clearInterval(countdownInterval);

        countdownInterval = setInterval(() => {
            const now = new Date();
            const timeLeft = Math.floor((holdExpiryTime - now) / 1000);

            if (timeLeft <= 0) {
                clearInterval(countdownInterval);
                showWarning('Hold expired! Please book immediately or seats will be released.');
                holdExpiryTime = null;
            } else {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                const timeDisplay = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
                document.getElementById('priceText').textContent =
                    `Total Fare: Rs. ${(selectedSeats.length * PRICE_PER_SEAT).toFixed(2)} (Hold expires: ${timeDisplay})`;
            }
        }, 1000);
    }

    // Release hold when page unloads or user deselects all
    function releaseHoldIfNeeded() {
        if (selectedSeats.length === 0 && holdExpiryTime) {
            fetch('/Booking/ReleaseHold', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    scheduleId: scheduleId,
                    seatNumbers: selectedSeats
                })
            }).catch(err => console.error('Error releasing hold:', err));

            holdExpiryTime = null;
            if (countdownInterval) clearInterval(countdownInterval);
        }
    }

    // Update UI based on selected seats
    function updateUI() {
        const selectedSeatsDisplay = document.getElementById('selectedSeatsDisplay');
        const selectedSeatsList = document.getElementById('selectedSeatsList');
        const priceInfo = document.getElementById('priceInfo');
        const priceText = document.getElementById('priceText');
        const proceedBtn = document.getElementById('proceedBtn');

        console.log('updateUI called with selectedSeats:', selectedSeats);

        // Always enable the proceed button (seat selection is optional)
        proceedBtn.disabled = false;
        proceedBtn.style.cursor = 'pointer';
        proceedBtn.style.opacity = '1';

        if (selectedSeats.length > 0) {
            selectedSeatsDisplay.classList.add('show');
            selectedSeatsList.textContent = selectedSeats.sort((a, b) => a - b).join(', ');

            const totalFare = selectedSeats.length * PRICE_PER_SEAT;
            if (holdExpiryTime) {
                const now = new Date();
                const timeLeft = Math.floor((holdExpiryTime - now) / 1000);
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                priceText.textContent = `Total Fare: Rs. ${totalFare.toFixed(2)} (Hold expires: ${minutes}:${seconds < 10 ? '0' : ''}${seconds})`;
            } else {
                priceText.textContent = `Total Fare: Rs. ${totalFare.toFixed(2)}`;
            }
            priceInfo.classList.add('show');

            console.log('Seats selected - showing price info');
        } else {
            selectedSeatsDisplay.classList.remove('show');
            priceInfo.classList.remove('show');
            console.log('No seats selected - button still enabled');
        }
    }

    // Proceed to payment
    function proceedToPayment() {
        const pickup = document.getElementById('pickupLocation').value.trim();
        const drop = document.getElementById('dropLocation').value.trim();

        if (!pickup || !drop) {
            showError('Please enter pickup and drop locations');
            return;
        }

        // Convert selected seats to integers and sort them
        const seatNumbers = selectedSeats.length > 0 
            ? selectedSeats.map(s => parseInt(s)).sort((a, b) => a - b).join(',')
            : '';

        console.log('Proceeding with seats:', seatNumbers, 'Number of seats:', selectedSeats.length);

        // Only pass seats if any are selected, otherwise use empty string
        const seatsParam = seatNumbers ? `&seats=${seatNumbers}` : '';
        window.location.href = `/Booking/ConfirmBooking/${scheduleId}?pickup=${encodeURIComponent(pickup)}&drop=${encodeURIComponent(drop)}${seatsParam}`;
    }

    // Show error message
    function showError(message) {
        const errorMsg = document.getElementById('errorMsg');
        errorMsg.textContent = message;
        errorMsg.classList.add('show');
        setTimeout(() => {
            errorMsg.classList.remove('show');
        }, 4000);
    }

    // Show warning message
