@{
    ViewData["Title"] = "Manage Fares - GoCeylon";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-section-title">üí∞ Manage Bus Fares</h1>
        </div>
    </div>

    <!-- Add/Update Fare Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-go-ceylon">
                <div class="card-header">‚ûï Add/Update Fare Configuration</div>
                <div class="card-body">
                    <form id="addFareForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="farePerKm" class="form-label">Fare Per Kilometer (Rs.)</label>
                                <input type="number" class="form-control" id="farePerKm" step="0.01" placeholder="50.00" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="description" class="form-label">Description</label>
                                <input type="text" class="form-control" id="description" placeholder="e.g., Base fare per km" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-go-ceylon">‚úÖ Save Fare</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Fare Calculator -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-go-ceylon">
                <div class="card-header">üßÆ Fare Calculator</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="calcDistance" class="form-label">Distance (km)</label>
                            <input type="number" class="form-control" id="calcDistance" step="0.1" placeholder="115.5">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="calcFare" class="form-label">Total Fare (Rs.)</label>
                            <input type="text" class="form-control" id="calcFare" placeholder="0.00" readonly>
                        </div>
                    </div>
                    <button class="btn btn-go-ceylon-outline" onclick="calculateFare()">Calculate</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Fares Table -->
    <div class="row">
        <div class="col-12">
            <div class="card card-go-ceylon">
                <div class="card-header">üìã Fare Configuration</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-go-ceylon table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Fare Per Km (Rs.)</th>
                                    <th>Description</th>
                                    <th>Last Updated</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="faresTableBody">
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const API_BASE = '/api';

    // Load fares
    async function loadFares() {
        try {
            const response = await fetch(`${API_BASE}/busfare`);
            const result = await response.json();
            
            const tbody = document.getElementById('faresTableBody');
            tbody.innerHTML = '';

            if (result.success && result.data.length > 0) {
                result.data.forEach(fare => {
                    const updatedDate = fare.updatedAt ? new Date(fare.updatedAt).toLocaleDateString() : 'N/A';
                    const row = `
                        <tr>
                            <td>${fare.fareId}</td>
                            <td><strong>Rs. ${fare.farePerKm.toFixed(2)}</strong></td>
                            <td>${fare.description}</td>
                            <td>${updatedDate}</td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="editFare(${fare.fareId})">‚úèÔ∏è Edit</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteFare(${fare.fareId})">üóëÔ∏è Delete</button>
                            </td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
            } else {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">No fare configuration found</td></tr>';
            }
        } catch (error) {
            console.error('Error loading fares:', error);
        }
    }

    // Add fare
    document.getElementById('addFareForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const fare = {
            farePerKm: parseFloat(document.getElementById('farePerKm').value),
            description: document.getElementById('description').value
        };

        try {
            const response = await fetch(`${API_BASE}/busfare`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(fare)
            });

            const result = await response.json();
            console.log('Response status:', response.status);
            console.log('Response result:', result);
            
            if (result.success) {
                alert('Fare configuration added successfully!');
                document.getElementById('addFareForm').reset();
                loadFares();
            } else {
                alert(`Error: ${result.message}\n${result.error || ''}`);
            }
        } catch (error) {
            console.error('Error adding fare:', error);
            alert('Error adding fare: ' + error.message);
        }
    });

    // Calculate fare
    async function calculateFare() {
        const distance = document.getElementById('calcDistance').value;
        if (!distance || distance <= 0) {
            alert('Please enter a valid distance');
            return;
        }

        try {
            const response = await fetch(`${API_BASE}/busfare/calculate/${distance}`);
            const result = await response.json();

            if (result.success) {
                document.getElementById('calcFare').value = 'Rs. ' + result.data.totalFare.toFixed(2);
            } else {
                alert(`Error: ${result.message}`);
            }
        } catch (error) {
            console.error('Error calculating fare:', error);
            alert('Error calculating fare');
        }
    }

    // Delete fare
    async function deleteFare(fareId) {
        if (!confirm('Are you sure you want to delete this fare configuration?')) return;

        try {
            const response = await fetch(`${API_BASE}/busfare/${fareId}`, {
                method: 'DELETE'
            });

            const result = await response.json();
            if (result.success) {
                alert('Fare deleted successfully!');
                loadFares();
            } else {
                alert(`Error: ${result.message}`);
            }
        } catch (error) {
            console.error('Error deleting fare:', error);
            alert('Error deleting fare');
        }
    }

    // Load fares on page load
    loadFares();
</script>

<style>
    :root {
        --go-ceylon-red: #DC143C;
        --go-ceylon-yellow: #FFD700;
        --go-ceylon-dark-red: #8B0000;
    }
</style>
