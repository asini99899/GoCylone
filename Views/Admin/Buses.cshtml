@{
    ViewData["Title"] = "Manage Buses - GoCeylon";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-section-title">üöå Manage Buses</h1>
        </div>
    </div>

    <!-- Add Bus Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-go-ceylon">
                <div class="card-header">‚ûï Add New Bus</div>
                <div class="card-body">
                    <form id="addBusForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="numberPlate" class="form-label">Number Plate</label>
                                <input type="text" class="form-control" id="numberPlate" placeholder="e.g., WP-CD-1234" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="numberOfSeats" class="form-label">Number of Seats</label>
                                <input type="number" class="form-control" id="numberOfSeats" min="1" placeholder="48" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="seatStructure" class="form-label">Seat Structure</label>
                                <select class="form-control" id="seatStructure" required>
                                    <option value="">-- Select --</option>
                                    <option value="2*2">2x2</option>
                                    <option value="2*3">2x3</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="conductorNumber" class="form-label">Conductor Number</label>
                                <input type="text" class="form-control" id="conductorNumber" placeholder="e.g., C001" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="condition" class="form-label">Condition</label>
                                <select class="form-control" id="condition" required>
                                    <option value="">-- Select --</option>
                                    <option value="AC">AC</option>
                                    <option value="Non-AC">Non-AC</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-go-ceylon">‚úÖ Add Bus</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Buses Table -->
    <div class="row">
        <div class="col-12">
            <div class="card card-go-ceylon">
                <div class="card-header">üìã Buses List</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-go-ceylon table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Number Plate</th>
                                    <th>Seats</th>
                                    <th>Structure</th>
                                    <th>Conductor</th>
                                    <th>Condition</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="busesTableBody">
                                <tr>
                                    <td colspan="7" class="text-center text-muted">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const API_BASE = '/api';

    // Load buses
    async function loadBuses() {
        try {
            const response = await fetch(`${API_BASE}/bus`);
            const result = await response.json();
            
            const tbody = document.getElementById('busesTableBody');
            tbody.innerHTML = '';

            if (result.success && result.data.length > 0) {
                result.data.forEach(bus => {
                    const row = `
                        <tr>
                            <td>${bus.busId}</td>
                            <td><strong>${bus.numberPlate}</strong></td>
                            <td>${bus.numberOfSeats}</td>
                            <td>${bus.seatStructure}</td>
                            <td>${bus.conductorNumber}</td>
                            <td><span class="badge badge-go-ceylon">${bus.condition}</span></td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="editBus(${bus.busId})">‚úèÔ∏è Edit</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteBus(${bus.busId})">üóëÔ∏è Delete</button>
                            </td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
            } else {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">No buses found</td></tr>';
            }
        } catch (error) {
            console.error('Error loading buses:', error);
            alert('Error loading buses');
        }
    }

    // Add bus
    document.getElementById('addBusForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const bus = {
            numberPlate: document.getElementById('numberPlate').value,
            numberOfSeats: parseInt(document.getElementById('numberOfSeats').value),
            seatStructure: document.getElementById('seatStructure').value,
            conductorNumber: document.getElementById('conductorNumber').value,
            condition: document.getElementById('condition').value
        };

        try {
            const response = await fetch(`${API_BASE}/bus`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(bus)
            });

            const result = await response.json();
            console.log('Response status:', response.status);
            console.log('Response result:', result);
            
            if (result.success) {
                alert('Bus added successfully!');
                document.getElementById('addBusForm').reset();
                loadBuses();
            } else {
                alert(`Error: ${result.message}\n${result.error || ''}`);
            }
        } catch (error) {
            console.error('Error adding bus:', error);
            alert('Error adding bus: ' + error.message);
        }
    });

    // Delete bus
    async function deleteBus(busId) {
        if (!confirm('Are you sure you want to delete this bus?')) return;

        try {
            const response = await fetch(`${API_BASE}/bus/${busId}`, {
                method: 'DELETE'
            });

            const result = await response.json();
            if (result.success) {
                alert('Bus deleted successfully!');
                loadBuses();
            } else {
                alert(`Error: ${result.message}`);
            }
        } catch (error) {
            console.error('Error deleting bus:', error);
            alert('Error deleting bus');
        }
    }

    // Load buses on page load
    loadBuses();
</script>

<style>
    :root {
        --go-ceylon-red: #DC143C;
        --go-ceylon-yellow: #FFD700;
        --go-ceylon-dark-red: #8B0000;
    }
</style>
