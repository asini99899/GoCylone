    </div>
</div>
<script>
    // Set minimum date to today
    document.getElementById('searchDate').min = new Date().toISOString().split('T')[0];

    // Load locations on page load
    async function loadLocations() {
        try {
            const response = await fetch('/Home/GetLocations');
            const result = await response.json();
            if (result.success && result.data) {
                const datalist = document.getElementById('locations');
                datalist.innerHTML = result.data.map(loc => `<option value="${loc}">`).join('');
            }
        } catch (error) {
            console.error('Error loading locations:', error);
        }
    }

    // Search buses
    async function searchBuses(event) {
        event.preventDefault();

        const fromLocation = document.getElementById('fromLocation').value.trim();
        const toLocation = document.getElementById('toLocation').value.trim();
        const searchDate = document.getElementById('searchDate').value;

        console.log('Search params:', { fromLocation, toLocation, searchDate });

        if (!fromLocation || !toLocation || !searchDate) {
            showMessage('Please fill all fields', 'error');
            return;
        }

        const searchBtn = document.getElementById('searchBtn');
        searchBtn.disabled = true;
        searchBtn.innerHTML = '<span class="spinner"></span> ' + translateText('searching');

        try {
            const payload = {
                fromLocation: fromLocation,
                toLocation: toLocation,
                searchDate: searchDate
            };

            console.log('Sending payload:', payload);

            const response = await fetch('/Home/SearchBuses', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(payload)
            });

            const result = await response.json();

            console.log('Response:', result);

            if (result.success) {
                displayResults(result.data, fromLocation, toLocation);
                showMessage(result.message, 'success');
            } else {
                showMessage(result.message || 'Error searching buses', 'error');
                document.getElementById('resultsContainer').innerHTML = '';
            }
        } catch (error) {
            console.error('Error:', error);
            showMessage('Error searching buses: ' + error.message, 'error');
            document.getElementById('resultsContainer').innerHTML = '';
        } finally {
            searchBtn.disabled = false;
            searchBtn.innerHTML = translateText('search_buses');
        }
    }

    // Display results
    function displayResults(buses, fromLocation, toLocation) {
        const container = document.getElementById('resultsContainer');

        if (!buses || buses.length === 0) {
            container.innerHTML = '<div class="no-results"><h3 data-translate="no_buses_found">No buses found</h3><p>Try searching for different locations or dates</p></div>';
            return;
        }

        const resultsHTML = buses.map(bus => `
            <div class="bus-card">
                <div class="bus-header">
                    <div class="bus-number">🚌 ${escapeHtml(bus.numberPlate)}</div>
                    <div>
                        <span class="bus-condition">${escapeHtml(bus.condition)}</span>
                    </div>
                </div>

                <div class="route-info">
                    <div class="route-line">
                        <span>${escapeHtml(bus.fromLocation)}</span>
                        <span class="route-arrow">→</span>
                        <span>${escapeHtml(bus.toLocation)}</span>
                    </div>
                </div>

                <div class="bus-details">
                    <div class="detail-item">
                        <span class="detail-label" data-translate="departure_time">Departure Time</span>
                        <span class="detail-value">${formatTime(bus.departureTime)}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label" data-translate="seats">Number of Seats</span>
                        <span class="detail-value">${bus.numberOfSeats}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label" data-translate="seat_structure">Seat Structure</span>
                        <span class="detail-value">${escapeHtml(bus.seatStructure)}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label" data-translate="distance">Distance</span>
                        <span class="detail-value">${bus.distance} km</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label" data-translate="estimated_time">Estimated Time</span>
                        <span class="detail-value">${escapeHtml(bus.estimatedTime)}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label" data-translate="scheduled_date">Schedule Date</span>
                        <span class="detail-value">${formatDate(bus.scheduledDate)}</span>
                    </div>
                </div>

                <button class="book-btn" onclick="bookBus(${bus.scheduleId})" data-translate-value="book_now">Book Now</button>
            </div>
        `).join('');

        container.innerHTML = resultsHTML;
        // Re-translate the newly added elements
        translatePage();
    }

    // Show message
    function showMessage(message, type) {
        const messageDiv = document.getElementById('message');
        const className = type === 'error' ? 'error-msg' : 'success-msg';
        messageDiv.innerHTML = `<div class="${className}">${escapeHtml(message)}</div>`;
        setTimeout(() => {
            messageDiv.innerHTML = '';
        }, 5000);
    }

    // Format time
    function formatTime(timeString) {
        if (!timeString) return 'N/A';
        const [hours, minutes] = timeString.split(':');
        return `${hours}:${minutes}`;
    }

    // Format date
    function formatDate(dateString) {
        const date = new Date(dateString);
        return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
    }

    // Escape HTML
    function escapeHtml(text) {
        if (!text) return '';
        const map = {
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#039;'
        };
        return text.replace(/[&<>"']/g, m => map[m]);
    }

    // Book bus
    function bookBus(scheduleId) {
        if (!scheduleId) {
            alert('Invalid schedule');
            return;
        }
        window.location.href = `/Booking/SelectSeats/${scheduleId}`;
    }

    // Load locations on page load
    window.addEventListener('DOMContentLoaded', loadLocations);
</script>