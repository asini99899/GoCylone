<div class="container-fluid" style="padding: 0;">
    <div class="search-container">
        <h1 class="search-title" data-translate="find_your_bus">🚌 Find Your Bus</h1>

        <form id="searchForm" onsubmit="searchBuses(event)">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="fromLocation" class="form-label" data-translate="from">From</label>
                        <input type="text" id="fromLocation" name="fromLocation" class="form-control"
                            placeholder="Enter departure location" required list="locations"
                            data-translate-placeholder="enter_from_location">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="toLocation" class="form-label" data-translate="to">To</label>
                        <input type="text" id="toLocation" name="toLocation" class="form-control"
                            placeholder="Enter destination" required list="locations"
                            data-translate-placeholder="enter_destination">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="searchDate" class="form-label" data-translate="departure_date">Date</label>
                        <input type="date" id="searchDate" name="searchDate" class="form-control" required>
                    </div>
                </div>
            </div>

            <button type="submit" class="search-btn" id="searchBtn" data-translate-value="search_buses">Search
                Buses</button>
        </form>

